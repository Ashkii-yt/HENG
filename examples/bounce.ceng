@raw
html,body { height:100%; margin:0; font-family: system-ui, sans-serif; background:#111; color:#eee; }
#ui {
  position:fixed; left:12px; top:12px; z-index:10;
  background:rgba(255,255,255,0.04); padding:10px; border-radius:8px; backdrop-filter: blur(6px);
  box-shadow: 0 6px 20px rgba(0,0,0,0.6);
  font-size:14px;
}
canvas { display:block; width:100%; height:100vh; }
button, label { color: #eee; }
.muted { color: #bbb; font-size:12px; display:block; margin-top:6px; }
